<div>
	<h2 align="center">Retail</h2>
	<h4 align="center"><%= "Order # #{@order.order_number}" %></h2>
	<h4>Order Items:</h4>
	<table class="table table-striped" id="order-table-total" id="order-table-total">
		<thead>
	    <tr>
		    <th>Order Item</th>
		    <th>Cost</th>
		    <th>Sale Tax</th>
		    <th>Import Tax</th>
	    </tr>
		</thead>
		<tbody>
			<% @order.order_items.each do |order_item| %>
				<tr>
				  <td><%= order_item.item_name %></td>
				  <td><%= order_item.cost %></td>
				  <td><%= order_item.sale_tax %></td>
				  <td><%= order_item.import_tax %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<h4>Total Cost: <%= @order.cost_total.to_f %></h4>
	<h4>Total Sale Tax: <%= @order.sale_tax_total.to_f %></h4>
</div>

<style type="text/css">
	table tr td {
		border: 1px solid #ccc;
	}
	table {
		width: 100%;
	}
</style>